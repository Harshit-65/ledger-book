<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./styles/style.css" type="text/css" />
    <title>index</title>
  </head>
  <body class="bg-gray-600 w-full h-screen flex flex-col">
    <nav class="flex justify-between bg-gray-400">
      <h1 class="text-blue-700 font-bold text-center text-3xl m-2">
        Ledger Book
      </h1>
      <ul class="flex justify-center items-center gap-4 mr-4">
        <li><a href="/">Home</a></li>
        <li><a href="/create">Create ledger</a></li>
      </ul>
    </nav>
    <main class="flex flex-1 flex-col items-center justify-center bg-gray-700">
      <ul class="w-1/3 p-2 border border-gray-300 rounded">
        <% files.forEach((file)=>{ %>
        <li
          class="flex justify-between bg-gray-400 w-full px-3 py-1 border border-gray-300 rounded my-1"
        >
          <%= file %>
          <div>
            <a class="bg-blue-500 rounded-md p-1" href="/edit/<%= file %>"
              >Edit</a
            >
            <a class="bg-red-500 rounded-md p-1" href="/delete/<%= file %>"
              >Delete</a
            >
          </div>
        </li>

        <% }) %>
      </ul>
    </main>
  </body>
</html>
